	<select id="selectOne" parameterType="String" resultType="DocumentVo">
    	select * from document
    	where no = ${no}
    </select>
    
    <select id="nextAndPre" resultType="DocumentVo">
		SELECT NO, TITLE, ENROLL_DATE
		FROM DOCUMENT
		WHERE NO IN
		(
			SELECT MIN(NO)
			FROM 
			(
				SELECT NO
				FROM DOCUMENT
				WHERE NO > ${no}
			)
			UNION ALL
			SELECT MAX(NO)
			FROM 
			(
				SELECT NO
				FROM DOCUMENT
				WHERE NO <![CDATA[<]]> ${no}
			)
		)
	</select>

<select id="docuselect"  resultType="DocumentVo">
	  SELECT  
		D.NO
        ,S.DOC_NO
		,D.ENROLL_DATE
		,D.TYPE
		,D.TITLE
		,S.STATE
	FROM
		DOCUMENT D 
	LEFT OUTER JOIN DOC_SAVE S ON D.NO =S.DOC_NO 
    ORDER BY NO DESC

</select>

<select id="approveDS" resultType="DocumentVo">
	SELECT
		A.NO
		,DS.NO
		,DS.AP_NO
		,DS.DOC_NO
		,DS.STATE
		,DS.A_YN
		,A.A_MAN
		,A.A_NO
		,A.PRI
	FROM
		APRPROVAL A
	LEFT OUTER JOIN DOC_SAVE DS ON A.NO = DS.AP_NO
</select>

<select id="approveAP" resultType="DocumentVo">
	SELECT 
		A.NO
		,P.NO
		,A.A_MAN
		,A.A_NO
		,A.PRI
		,P.M_NO
	FROM
		APRPROVAL A
	LEFT OUTER JOIN APP_NO P ON A.NO = P.NO = A.A_NO
		
</select>

<delete id="delete">

	DELETE FROM
	DOCUMENT
	WHERE
	NO = #{no}

</delete>

<select id="detail" parameterType="int" resultType="DocumentVo">
	SELECT 
		NO
		,ENROLL_DATE
		,SEND_PAY
		,REFER
		,CONTENT
		,TITLE
	FROM
		DOCUMENT
	WHERE NO = #{no}
</select>
<!-- 게시글 수정 -->
<update id="modify" parameterType="DocumentVo">
	UPDATE DOCUMENT
		SET
			TITLE = #{title}
			,CONTENT = #{content}
			,REFER = #{refer}
			,ENROLL_DATE = #{enrollDate}
		WHERE NO = #{no}
			
			
	
</update>


<mapper namespace="documentMapper">


<!-- 게시판 insert -->
<insert id="write">

	INSERT INTO DOCUMENT
        (
        	"NO"
        	,"SEND_PAY"
        	,"AP_NO"
        	,"TITLE"
        	,"CONTENT"
        	,ENROLL_DATE
        	,MODIFY_DATE
        	,START_DATE
        	,END_DATE
        	,"REFER"
        	,D_YN
        	,D_SAVE
        	,"TYPE"

        <!-- 
        	"STATE",
        	"TYPE"
        	 -->
        )
        VALUES
        (
        	SEQ_DOCUMENT_NO.NEXTVAL
        	,#{sendPay}
        	,#{apNo}
            ,#{title}
            ,#{content}
            ,SYSDATE
            ,SYSDATE
            ,SYSDATE
            ,SYSDATE
            ,#{refer}
            ,'N'
            ,'N'
           	,#{type}
            

           <!--  ,#{sendName} -->
       <!--     ,#{sendPay}
           ,'1'
           ,'N'
           ,'N'
           ,#{sendName} -->

        )
</insert>
<insert id="stateis">
	INSERT INTO DOC_SAVE
	(
		"NO"
		,"AP_NO"
		,"DOC_NO"
		,STATE
		,A_YN
	)
	VALUES
	(
		SEQ_DOC_SAVE_NO.NEXTVAL
		,#{apNo}
		,#{docNo}
		,'1'
		,'N'
	)
	
</insert>



<select id="getNo" resultType="String">
    	SELECT "NO"
    	FROM DOCUMENT
    	WHERE SEND_PAY = ${sendPay}
    	AND "ENROLL_DATE" = #{enrollDate}
    </select>





<select id="selectCount" parameterType="String" resultType="int">
        SELECT COUNT(*)
        FROM DOCUMENT
        <trim prefix="WHERE" prefixOverrides="OR||AND">
	        <if test=" keyword != '' ">
		        (
		        TITLE LIKE '%${keyword}%'
		        OR CONTENT LIKE '%${keyword}%'
		        )
	        </if>
	        AND DELETE_YN = 'N' 
		</trim>
        order by enroll_date
    </select>
    
    
  <select id="selectList" parameterType="String" resultType="DocumentVo">
        SELECT *
        FROM DOCUMENT
        <trim prefix="WHERE" prefixOverrides="OR||AND">
	        <if test=" keyword != '' ">
		        (
		        TITLE LIKE '%${keyword}%'
		        OR CONTENT LIKE '%${keyword}%'
		        )
	        </if>
	        AND DELETE_YN = 'N' 
		</trim>
        order by no DESC, enroll_date
    </select>
    
